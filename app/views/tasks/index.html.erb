<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><% if task.completed%>
      <%= "✅" %>
      <% else  %>
      <%= "⬜️" %>
      <% end %>
     <%= task.title %>
    <%= link_to task.title, task_path(task) %></li>
  <% end %>
</ul>

<div class="button">
    <%= link_to "Add a new task", tasks_new_path, class: "btn btn-light" %>
</div>
